            id="navCon"
            width="98%"
            height="calc(100% - 160px)"
            class="sapUiSmallMarginBottom"
        >
            <Page
                id="p1"
                showHeader="false"
                backgroundDesign="Transparent"
            >
                <mvc:XMLView
