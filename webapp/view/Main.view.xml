        <FlexBox
            id="_IDGenFlexBox"
            height="100px"
            alignItems="Start"
            justifyContent="Center"
        >
            <Button
                id="JumpButton"
                text="JumpToList"
                press="handleJumpToList"
                class="sapUiSmallMarginEnd"
            />
            <Button
                id="PreviousButton"
                text="Previous"
                press="handleNavigate"
                class="sapUiSmallMarginEnd"
                visible="{= ${formState>/currentStep} !== 1}"
            />
            <Button
                id="NextButton1"
                text="Next"
                press="handleNavigate"
                class="sapUiSmallMarginEnd"
                visible="{= ${formState>/currentStep} === 1}"
            >
                <customData>
                    <core:CustomData
                        key="target"
                        value="p2"
                    />
                </customData>
            </Button>
            <Button
                id="NextButton2"
                text="Next"
                press="handleNavigate"
                class="sapUiSmallMarginEnd"
                visible="{= ${formState>/currentStep} === 2}"
            >
                <customData>
                    <core:CustomData
                        key="target"
                        value="p3"
                    />
                </customData>
            </Button>
            <Button
                id="SaveButton"
                text="Save"
                press="handleSubmit"
                visible="{= ${formState>/currentStep} === 3}"
            />
        </FlexBox>
