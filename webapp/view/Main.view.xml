                />
            </Page>
            <Page
                id="p2"
                showHeader="false"
                backgroundDesign="Transparent"
            >
                <mvc:XMLView
                    id="_IDGenXMLView1"
                    viewName="ui5.ogarpt.view.formSections.SectionB"
                />
            </Page>
            <Page
                id="p3"
                showHeader="false"
                backgroundDesign="Transparent"
            >
                <mvc:XMLView
                    id="_IDGenXMLView2"
                    viewName="ui5.ogarpt.view.formSections.SectionC"
                />
            </Page>
        </NavContainer>
